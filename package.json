{
  "name": "pear-cmd",
  "version": "1.0.2",
  "main": "index.js",
  "type": "commonjs",
  "description": "Pear command parser & definitions",
  "license": "Apache-2.0",
  "files": [
    "pear.js",
    "run.js"
  ],
  "scripts": {
    "format": "prettier --write .",
